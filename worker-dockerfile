# Use an official Go runtime as a parent image
FROM golang:1.19

# Set the working directory in the container
WORKDIR /app

# Copy the go.mod and go.sum files first to leverage Docker cache
COPY go.mod go.sum ./

# Download all dependencies
RUN go mod download

# Copy the local package files to the container's workspace.
COPY pkg/ ./pkg/
COPY cmd/worker/main.go .

# Build the worker application
RUN go build -o worker main.go

# Expose port 50056 to the outside world
EXPOSE 50056

# Run the worker when the container launches
CMD ["./worker", "--coordinator=server:8080"]
